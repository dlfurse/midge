{
    "rt_data" : 
    {
        "name" : "signal_data"
    },

    "rf_data" :
    {
        "name" : "spectrum_data"
    },

    "rt_monarch_producer" :
    {
        "name" : "signal",
        "file" : "trap_off.egg",
        "size" : 10000,
        "stride" : 10000
    },

    "rt_rf_power_transformer" :
    {
        "name" : "power",
        "impedance_ohm" : 50
    },

    "rf_average_root_consumer" :
    {
        "name" : "spectrum",
        "file" : "trap_background.root",
        "plot" : true,
        "plot_title" : "Trap Off Power",
        "axis_title" : "Power [watt]"
    },

    "void_controller" :
    {
        "name" : "control"
    },

    "join" : "signal.out_0:signal_data.in",
    "join" : "signal_data.out:power.in_0",
    "join" : "power.out_0:spectrum_data.in",
    "join" : "spectrum_data.out:spectrum.in_0",
    "join" : "control.out_0:signal",

    "run" : "control"
}