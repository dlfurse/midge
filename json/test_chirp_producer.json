        "axis_title" : "Signal [volt]"
    },

    "rf_ascii_consumer" :
    {
        "name" : "rfa_out",
        "file" : "test_chirp_producer.power.txt"
    },

    "rf_root_consumer" :
    {
        "name" : "rfr_out",
        "file" : "test_chirp_producer.power.root",
