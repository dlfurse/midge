        "stop_sec" : 18000.0e-9,
        "interval" : 1.0e-9,
        "size" : 1000,
        "stride" : 10
    },

    "rt_rf_power_transformer" :
    {
        "name" : "rt_rf",
        "impedance_ohm" : 50.0
    },

    "rt_ascii_consumer" :
    {
        "name" : "rta_out",
        "file" : "test_chirp_producer.signal.txt"
