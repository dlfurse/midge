{
    "rt_monarch_producer" :
    {
        "name" : "signal",
        "file" : "simulation_background_signal.egg",
        "begin_sec" : 0.0,
        "end_sec" : 2.0e-4,
        "size" : 1000,
        "stride" : 1000,
        "length" : 10
    },

    "rt_rtf_power_transformer" :
    {
        "name" : "power",
        "impedance_ohm" : 50,
        "window_rectangular" :
        {
        },
        "length" : 10
    },

    "rtf_rf_average_transformer" :
    {
        "name" : "average",
        "length" : 10
    },

    "rf_rf_smoothing_transformer" :
    {
        "name" : "smoothing",
        "width" : 75,
        "window_hanning" :
        {
        },
        "length" : 10
    },

    "rf_binary_consumer" :
    {
        "name" : "binary",
        "file" : "simulation_background_spectrum.mgb"
    },

    "rf_plot_consumer" :
    {
        "name" : "plot",
        "plot_key" : "spectrum_out_canvas",
        "plot_name" : "spectrum_out_histogram",
        "chart_title" : "Background Spectrum",
        "x_title" : "Time [sec]",
        "y_title" : "Power [watt]"
    },

    "join" : "signal.out_0:power.in_0",
    "join" : "power.out_0:average.in_0",
    "join" : "average.out_0:smoothing.in_0",
    "join" : "smoothing.out_0:binary.in_0",
    "join" : "smoothing.out_0:plot.in_0",

    "run" : "signal:power:average:smoothing:binary:plot"
}
